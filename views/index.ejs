<!DOCTYPE html>
<html>
  <head>
    <title>Lingo</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="/javascripts/angularApp.js"></script>
  </head>
  <body ng-app="lingo">
    <h1>Lingo</h1>
    <ui-view></ui-view>

    <script type="text/ng-template" id="/home.html">
    </script>

    <script type="text/ng-template" id="/translate.html">
    <div ng-controller="TranslateCtrl">
    	<form ng-submit="submitTranslation()">
    		<label for="fromLang">From</label>
    		<select name="fromLang" ng-model="form.fromLang">
            <option value="eng">English</option>
            <option value="fra">French</option>
            <option value="ger">German</option>
        </select>

        <label for="toLang">To</label>
        <select name="toLang" ng-model="form.toLang">
            <option value="eng">English</option>
            <option value="fra">French</option>
            <option value="ger">German</option>
        </select>

        <label for="word">Word</label>
        <input type="text" ng-model="form.word">

    		<button type="submit">Translate</button>
    	</form>
    </div>
    </script>
  </body>
</html>
